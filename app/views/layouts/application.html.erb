<!DOCTYPE html>
<html lang="en" dir="ltr">
      <head>
        <title>PACE UTEM</title>
          <%= csrf_meta_tags %>
          <%= csp_meta_tag %>

          <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
          <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
  <body>
    <% if current_page?(root_path) %>

      <%= render "layouts/navbarinicio" %><br>
       <%= yield %>

    <%else %>

        <% if user_signed_in? %>
          <%= render "layouts/sidemenu" %>
        <%else %>
          <%= render "layouts/navbarinicio" %>
          <% if params[:action] == "new"%>
            <div class="offset-4 col-sm-4 container-fluid" align="center">
              <%= render 'layouts/fondo' %>
            </div>
          <% else %>
            <div class="container">
              <%= render 'layouts/fondo' %>
            </div>
          <% end %>
        <%end %>

    <%end%>

  </body>
</html>