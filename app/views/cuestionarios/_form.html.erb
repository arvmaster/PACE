<%= form_for @cuestionario do |f| %>

  <% if @cuestionario.errors.any? %>
    <div id="error_explanation">
      <h2>No se pudo realizar la acci√≥n: <%= pluralize(@cuestionario.errors.count, "Error/es") %> </h2>
      <ul>
        <% @cuestionario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>



    <div class="form-group">
      <% if current_user.rol == 'Admin' %>
        <%= f.label :Nombre_Cuestionario %>
        <%= f.text_field :nombre_cues, :class => 'form-control' %>
      <%end%>

    </div>
      <%= f.fields_for :pregunta_cuestionarios do |p|  %>
    </br>
          <div class="form-row">
          <% if current_page? new_cuestionario_path%>
              <%= p.hidden_field :casilla, :value => false %>
          <%else %>
              <%= p.check_box :casilla, class: "form-control col-1" %>
          <%end %>
          <% if current_user.rol == 'Admin' %>
                <%= p.label :Pregunta %>
                <%= p.text_field :pregunta_cues, class: "form-control" %>
                <%= p.label :Respuesta %>
                <%= p.select(:respuesta,["A","T","R","P"], {}, { :class => 'btn btn-default dropdown-toggle border' }) %>
          <%else%>
                <%= p.text_field :pregunta_cues, class: "form-control col-7",disable: true%>
                <%= p.hidden_field :respuesta, class: "form-control" %>
          <%end%>
        </div>
    </br>
      <%end%>
  </br>
  <div><%= f.submit 'Enviar', :class => 'btn btn-info' %></div>

<% end %>

