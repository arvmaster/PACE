<h3><%= link_to 'Cuestionarios', cuestionarios_url %></h3>

<h1><%= @cuestionario.nombre_cues %>
  <%if current_user.rol == "Admin" %>
    <%= link_to 'Editar Cuestionario', edit_cuestionario_path(@cuestionario.id) ,class: "btn btn-default" %>
  <%else %>
    <%= link_to 'Editar Respuestas', edit_cuestionario_path(@cuestionario.id) ,class: "btn btn-default" %>
  <%end%>
</h1>

<table class ="table table-striped table-bordered table-info">
          <tr>
              <th></th>
              <th>Pregunta</th>
              <% if current_user.rol == "Admin" %>
              <th>Respuesta</th>
          <%end%>
          </tr>
      <% @cuestionario.pregunta_cuestionarios.each do |f| %>
          <tr>
              <td><%= f.casilla ? "☑" : "☐"%></td>
              <td><%= f.pregunta_cues%></td>
              <% if current_user.rol == "Admin" %>
              <td><%= f.respuesta%></td>
              <%end%>>
          </tr>
      <%end%>
</table>

<%= pie_chart({"Activo"=>@cuestionario.eda_a,"Reflexivo"=>@cuestionario.eda_r,
               "Teórico"=>@cuestionario.eda_t,"Pragmatico"=>@cuestionario.eda_p})%>
