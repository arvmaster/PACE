<h1>user_evento Index</h1>

<p>
  <%= link_to 'Principal', controller: 'inicio' %> |
  <%= link_to 'Crear', new_user_evento_path %>  
</p>

<table class="table table-striped table-bordered">

  <tr>
    <th>Nombre user_evento</th>
    <th>Topico</th>
  </tr>

  <% @user_eventos.each do |f| %>
    <tr>
      <td><%= f.nombre_ev %></td>
      <td><%= link_to 'Ver', user_evento_path(f) %></td>
      <%if current_user.rol != "Estudiante" %>
      <td><%= link_to 'Editar', edit_user_evento_path(f) %></td>
      <%end%>
    </tr>

  <% end %>

</table>