<h1>Informes</h1>

<p>
  <%if current_user.role == "Admin" %>
    <%= link_to 'Crear', new_informe_path %>
  <%else%>
    <%= link_to 'Generar', new_informe_path %>
  <%end %>
</p>

<table class="table table-striped table-bordered">

  <tr>
    <th>Nombre Informe</th>
  </tr>

  <% @informes.each do |f| %>
    <tr>
      <td><%= f.nombre_inf %></td>
      <td><%= link_to 'Ver', informe_path(f) %></td>
      <% if current_user.role == "Admin" %>
      <td><%= link_to 'Editar', edit_informe_path(f) %></td>
        <%end %>
    </tr>

  <% end %>

</table>

<h2>Mis informes</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>Nombre Informe</th>
  </tr>

  <% current_user.informes.each do |f| %>
    <tr>
      <td><%= f.nombre_inf %></td>
      <td><%= link_to 'Ver', informe_path(f) %></td>
      <%if current_user.id == current_user.id%>
        <td><%= link_to 'Editar', edit_informe_path(f) %></td>
      <% end %>
    </tr>
  <%end %>
</table>