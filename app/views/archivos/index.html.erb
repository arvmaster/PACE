<h1>Archivos</h1>

<% if user_signed_in? and current_user.rol != "Estudiante"%>
  <p>
    <%= link_to 'Subir Material', new_archivo_path %>
  </p>
<%end%>

<table class="table table-striped table-bordered">

  <tr>
    <th>Nombre Archivo</th>
    <th>Asignatura</th>
    <th>Topico</th>
    <th>Descargar</th>
  </tr>

  <% @archivos.each do |f| %>
    <tr>
      <td><%= f.name %></td>
      <td><%= f.asignatura %></td>
      <td><%= f.topico %></td>
      <td align="center"><%= link_to image_tag("document.jpg",size: "35x35"), f.file, target: '_blank' %></td>
      <% if user_signed_in? and current_user.rol != "Estudiante" %>
      <td><%= link_to 'Ver', archivo_path(f) %></td>
      <td><%= link_to 'Editar', edit_archivo_path(f) %></td>
      <% end %>
    </tr>

  <% end %>

</table>